<MudPaper>
    <MudContainer>
        <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Primary">
            @Title
        </MudText>
        <MudText Typo="Typo.body2" Align="Align.Center" Class="mb-8">
            @Content
        </MudText>
    </MudContainer>
</MudPaper>

@code {
    [Parameter] public string Title { get; set; } = "标题";
    [Parameter] public string Content { get; set; } = "内容";
}
