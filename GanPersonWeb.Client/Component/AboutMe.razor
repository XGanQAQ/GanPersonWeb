<!-- 关于我 -->
<MudGrid Class="d-flex align-center">
    <MudItem xs="12" sm="6" md="4">
        <GanPersonWeb.Client.Component.ShowPersonInfo />
    </MudItem>

    <MudItem xs="12" sm="6" md="8">
        <MudPaper>
            <MudContainer>
                <MudText Typo="Typo.h4" Class="my-4" Color="Color.Primary">
                    关于我
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    你好！我是一名专注于游戏开发的程序员，拥有丰富的游戏开发经验。我对创造沉浸式的游戏体验充满热情，特别关注游戏机制设计和技术实现。
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    我的专长包括Unity和（准备去学）Unreal引擎开发，同时对Godot等开源引擎也有深入研究。我喜欢探索新的游戏技术，从图形渲染到AI行为，从网络同步到物理模拟。
                </MudText>

                <MudText Typo="Typo.h5" Color="Color.Secondary">
                    主要技术栈
                </MudText>
                <MudChip T="string">Unity</MudChip>
                <MudChip T="string">Unreal Engine</MudChip>
                <MudChip T="string">Godot</MudChip>
                <MudChip T="string">C#</MudChip>
                <MudChip T="string">C++</MudChip>
                <MudChip T="string">ASP.NET</MudChip>
                <MudChip T="string">Blazor</MudChip>

                <MudText Typo="Typo.h5" Color="Color.Tertiary" Class="mt-4">Thanks for visit</MudText>
                <MudText Typo="Typo.subtitle1">@personEmail</MudText>
            </MudContainer>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    [Inject]
    public ClientPersonInfoService clientPersonInfoService { get; set; } = null!;

    private string personName = string.Empty;
    private string personImageUrl = string.Empty;
    private string description = string.Empty;
    private string personEmail = string.Empty;
    private List<SocialMediaLink> socialMediaLinks = new List<SocialMediaLink>();

    //从服务中获取个人信息
    protected override async Task OnInitializedAsync()
    {
        var personInfo = await clientPersonInfoService.GetPersonalInfoAsync();
        if (personInfo != null)
        {
            personName = personInfo.Name;
            personImageUrl = personInfo.ProfileImageUrl;
            description = personInfo.Description;
            personEmail = personInfo.Email;
            socialMediaLinks = personInfo.SocialMediaLinks;
        }
    }
}
