@page "/"
<MudContainer Class="mt-10 px-8" MaxWidth="MaxWidth.Large">
    <MudGrid>
        <MudItem xs="12" sm="9" md="9" id="主栏">
            <MudGrid>
                @* 展示俩个最新项目 *@
                <MudItem xs="12" md="6">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;"></MudPaper>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;"></MudPaper>
                </MudItem>
                @* 展示三个最新博客 *@
                <MudItem xs="12">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;"></MudPaper>
                </MudItem>
                <MudItem xs="12">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;"></MudPaper>
                </MudItem>
                <MudItem xs="12">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;"></MudPaper>
                </MudItem>
            </MudGrid>
            <MudPagination Count="4" @bind-Selected="@_selected" Class="mt-5" />
        </MudItem>
        <MudItem xs="12" sm="3" md="3" id="右侧边栏">
            <MudContainer Class="m-6">
                <MudImage Src="images/head.jpg" Elevation="25" Width="150" Class="rounded-circle"></MudImage>
            </MudContainer>

            @* 公告 *@
            <MudPaper>
                <MudText Typo="Typo.h6" Align="Align.Center">
                    公告
                </MudText>
                <MudText Typo="Typo.body2" Align="Align.Center" Class="mb-8">
                    个人博客正在建设中，敬请期待更多内容！
                </MudText>
            </MudPaper>

            @* 展示博文数据 *@
            <MudPaper Elevation="2">
                <MudList T="string">
                    <MudListItem Text="博文总数" SecondaryText="10" Icon="@Icons.Material.Filled.Inbox" />
                    <MudListItem Text="最近更新" SecondaryText="2025/3/12" Icon="@Icons.Material.Filled.Send" />
                    <MudListItem Text="浏览总数" SecondaryText="1200" Icon="@Icons.Material.Filled.Drafts" />
                </MudList>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private int _selected = 1;
}
