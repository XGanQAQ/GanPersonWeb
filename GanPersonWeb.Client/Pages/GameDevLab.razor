@page "/GameDevLab"

<PageTitle>游戏开发者实验室 | 个人博客</PageTitle>

<MudPaper Class="my-8">
    <!-- 英雄区域 -->
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudText Typo="Typo.h1" Align="Align.Center" Color="Color.Primary" Class="mt-8">
            创造游戏世界
        </MudText>
        <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-8">
            探索游戏开发的无限可能，分享我的项目、实验和思考
        </MudText>
        <MudContainer MaxWidth="MaxWidth.Small">
            <MudStack Justify="Justify.Center" Spacing="2">
                <MudButton Variant="Variant.Filled" Size="Size.Large" Color="Color.Primary" Href="/GameDevLab#projects">
                    <MudIcon Icon="@Icons.Material.Filled.RocketLaunch" Class="mr-2" /> 查看项目
                </MudButton>
                <MudButton Variant="Variant.Filled" Size="Size.Large" Color="Color.Secondary" Href="/GameDevLab#blog">
                    <MudIcon Icon="@Icons.Material.Filled.Book" Class="mr-2" /> 阅读博客
                </MudButton>
            </MudStack>
        </MudContainer>
    </MudContainer>

    <MudPaper>
        <!-- 项目展示 -->
        <MudContainer MaxWidth="MaxWidth.Large" class="my-16">
            <MudText Typo="Typo.h4" Align="Align.Center" Color="Color.Primary">
                我的游戏项目
            </MudText>
            <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-4">
                这些是我投入大量时间和精力的完整游戏项目，每个项目都代表了我作为游戏开发者的成长历程。
            </MudText>
            <GanPersonWeb.Client.Component.DisplayProjects DisplayCount="3" InlineCount="3" FilterTag="Game"/>
        </MudContainer>

        <!-- 实验展示 -->
        <MudContainer MaxWidth="MaxWidth.Large" class="my-16" Id="experiments">
            <MudText Typo="Typo.h4" Align="Align.Center" Color="Color.Secondary">
                技术实验
            </MudText>
            <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-4">
                这些是我在游戏开发过程中进行的小型实验和技术探索，帮助我理解和掌握各种游戏开发技术。
            </MudText>
            <GanPersonWeb.Client.Component.DisplayProjects DisplayCount="4" InlineCount="4" FilterTag="Experiment"/>
        </MudContainer>


        <!-- 博客文章 -->
        <MudContainer MaxWidth="MaxWidth.Large" class="my-16" Id="blog">
            <MudText Typo="Typo.h4" Align="Align.Center" Color="Color.Tertiary">
                开发日志
            </MudText>
            <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-4">
                记录我在游戏开发过程中的思考、遇到的问题和解决方案，以及行业见解。
            </MudText>
            <GanPersonWeb.Client.Component.DisplayBlogs DisplayCount="2" InlineCount="2"/>
        </MudContainer>

        <MudContainer MaxWidth="MaxWidth.Small" Class="my-16">
            <MudStack Row>
                <MudButton Size="Size.Large" Variant="Variant.Outlined" Color="Color.Secondary" EndIcon="@Icons.Material.Filled.More" Href="/Portfolio/Browse">
                    ViewMore Projects
                </MudButton>
                <MudSpacer />
                <MudButton Size="Size.Large" Variant="Variant.Outlined" Color="Color.Tertiary" EndIcon="@Icons.Material.Filled.More" Href="/Blogs/Browse">
                    ViewMore Blogs
                </MudButton>
            </MudStack>
        </MudContainer>

        <MudDivider/>

        <!-- 关于我 -->
        <GanPersonWeb.Client.Component.AboutMe/>
    </MudPaper>
</MudPaper>

@code {
    [Inject] public ClientProjectService ClientProjectService { get; set; } = default!;

    public List<Project> projects { get; set; } = new List<Project>();  

    protected override async Task OnInitializedAsync()
    {
        projects = await ClientProjectService.GetProjectsAsync();
    }
}
