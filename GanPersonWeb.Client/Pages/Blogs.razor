    <MudGrid>
        <MudItem xs="12" sm="9" md="9" id="主栏">
            <!-- 博客文章 -->
            <GanPersonWeb.Client.Component.DisplayBlogs DisplayCount="5" IsShowPageButtons="true" RankType="@_rankSelected" />
        </MudItem>
        <MudItem xs="12" sm="3" md="3" id="右侧边栏">
            <MudStack>
                <GanPersonWeb.Client.Component.ShowBlogsInfo />
            </MudStack>

        </MudItem>
    </MudGrid>
</MudContainer>
@code {
    private string _rankSelected = "最新正序";

}